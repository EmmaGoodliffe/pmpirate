{
  "name": "pmpirate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:server": "npm --prefix functions run build",
    "build:css": "tailwindcss -i src/index.css -o public/index.css",
    "build:svelte": "rollup -c",
    "build": "npm run build:css && npm run build:svelte && npm run build:server",
    "deploy": "npm run build && npm  run lint && firebase deploy",
    "dev:css": "npm run build:css -- --watch",
    "dev:server": "echo \"Remember to re-build the server when you make changes\"",
    "dev:svelte": "rollup -c -w",
    "dev": "concurrently \"npm:dev:*\" -c \"bold\"",
    "e2e": "cypress open",
    "lint": "eslint \".\" --fix && svelte-check && npm run build:server -- -- --noEmit && prettier \".\" --write",
    "start": "firebase emulators:start",
    "test": "cypress run"
  },
  "author": "Emma Goodliffe",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@tsconfig/svelte": "^1.0.13",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "concurrently": "^7.2.2",
    "cypress": "^10.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tailwindcss": "^3.0.0",
    "tslib": "^2.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "firebase": "^9.9.0"
  }
}
